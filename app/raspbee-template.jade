script#raspbee-remote-template(type='text/template')
  li.sortable.button.no-header
    label.device-label(data-bind="text: name, tooltip: $data.labelTooltipHtml")
    span.attributes(data-bind="template: { name: 'attribute-template', foreach: $data.device.attributes, afterRender: $data.afterAttributeRender }")
    div.ui-temp
      div.ui-spacer
      .button-control.ui-controlgroup.ui-controlgroup-horizontal.ui-corner-all.ui-mini.no-carousel-slide(data-role='controlgroup', data-type='horizontal', data-mini='true', data-enhanced='true')
        .ui-controlgroup-controls
          a.ui-first-child.ui-last-child.ui-btn.ui-corner-all.button(name='powerButton', data-bind='click: onButtonPress.bind($data,"power")') Power
          a.ui-first-child.ui-btn.ui-corner-all.button(name='upButton', data-bind='click: onButtonPress.bind($data,"up")') Up
          a.ui-last-child.ui-btn.ui-corner-all.button(name='downButton', data-bind='click: onButtonPress.bind($data,"down")') Down
          a.ui-first-child.ui-btn.ui-corner-all.button(name='leftButton', data-bind='click: onButtonPress.bind($data,"left")') Left
          a.ui-last-child.ui-btn.ui-corner-all.button(name='rightButton', data-bind='click: onButtonPress.bind($data,"right")') Right
          
script#raspbee-dimmer-template(type='text/template')
  li.sortable.no-header.raspbee-device
    div.item-inner
      label.device-label(data-bind="text: name, tooltip: $data.labelTooltipHtml")
      div.ui-dimlevel
        select.switch(data-bind="attr: { id: switchId }, value: switchState")
          option(value="off")=__('Off')
          option(value="on")=__('On')
        span.presence(data-bind="template: {name: 'attribute-template', data: $data.device.getAttribute('presence'), afterRender: $data.afterAttributeRender }")
        div.ui-smallspacer
        input.ddimmer(min="0", max="100", step="1", data-highlight="true",
          data-bind="attr: { id: dsliderId }, value: dsliderValue")

